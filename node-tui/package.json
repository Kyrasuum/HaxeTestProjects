{
    "name": "strangelet",
    "bin": "bin/main.js",
    "version": "1.0.0",
    "description": "Simple terminal text editor",
    "dependencies": {
        "blessed-contrib": "^4.11.0",
        "blessed-xterm": "^1.4.2",
        "pkg": "^5.5.2",
        "reblessed": "^0.1.84"
    },
    "pkg": {
        "targets": [
            "latest-linux-x64",
            "latest-windows-x64"
        ],
        "assets": [
            "node_modules/**/**/*"
        ],
        "scripts": "bin/**.js",
        "outputPath": "dist"
    },
    "scripts": {
        "build": "haxe default.hxml && npm i",
        "dev": "npm run build && node bin/main.js",
        "dist": "npm run build && pkg .",
        "clean": "rm -rf node_modules package-lock.json bin dist"
    },

    "keywords": [],
    "author": "Kyrasuum",
    "license": "GNU"
}
